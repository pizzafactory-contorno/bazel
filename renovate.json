{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "baseBranches": ["main"],
  "packageRules": [
    {
      "matchUpdateTypes": ["major", "minor", "patch"],
      "matchBaseBranches": ["main"],
      "enabled": false
    }
  ],
  "extends": ["config:base"],
  "enabledManagers": [
    "dockerfile"
  ],

  "schedule": [
    "every 6 hour after 00:00 and before 23:59 every day"
  ],
  "automergeSchedule": [
    "every 6 hour after 00:00 and before 23:59 every day"
  ]
}
